# ========================
# Environment Variables and PATH
# ========================
# Available to all shells (interactive, non-interactive, scripts)

# Tool-specific environment
# Modern hermetic package managers (mise replaces nvm/pyenv, uv replaces pip/pipx)
export MISE_DATA_DIR="$HOME/.local/share/mise"

# PATH Configuration
path=
path+=$HOME/bin
path+=/usr/local/sbin
path+=/usr/sbin
path+=/sbin
path+=/usr/local/bin
path+=/usr/bin
path+=/bin
path+=$HOME/.npm-global/bin
path+=$HOME/.cargo/bin
path+=$HOME/.local/bin
path+=$HOME/.rbenv/bin
path+=$HOME/go/bin
[[ -d $PYENV_ROOT/bin ]] && path+=$PYENV_ROOT/bin
export PATH

# Environment Variables
export EDITOR='emacs-wait'
export LANG=en_US.UTF-8
export LESS='-i'
export XCOMPOSEFILE=~/.Xcompose
export MCP_TEMPLATE_FILE="$HOME/etc/mcp-template.json"
export NPM_CONFIG_REGISTRY=https://registry.npmjs.org/

# Input Method configuration
# These were previously set to enable XIM (X Input Method) for complex text input:
#   XMODIFIERS='@im=none'
#   GTK_IM_MODULE=xim
#   QT_IM_MODULE=xim
#
# We explicitly unset them because:
# 1. XIM intercepts Compose key sequences, breaking them in terminals
# 2. We only use Western languages with Compose, not CJK input methods
# 3. Chrome and other apps work fine without XIM
#
# If you need CJK input in the future, set these per-application:
#   GTK_IM_MODULE=xim QT_IM_MODULE=xim <application>
unset XMODIFIERS
unset GTK_IM_MODULE
unset QT_IM_MODULE

# Load environment files
[ -f "$HOME/.cargo/env" ] && . "$HOME/.cargo/env"
[ -f ~/.env-secrets ] && source ~/.env-secrets
[ -f "$HOME/.rokit/env" ] && . "$HOME/.rokit/env"

# Tool initialization (available to all shells including non-interactive)
# Initialize mise (replaces nvm, pyenv, etc.)
command -v mise >/dev/null 2>&1 && eval "$(mise activate zsh)"

# Keep rbenv if still needed
command -v rbenv >/dev/null 2>&1 && eval "$(rbenv init -)"
