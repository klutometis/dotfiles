{
  "mcpServers": {
    "context7": {
      "type": "http",
      "url": "http://localhost:3100/servers/context7/mcp"
    },
    "firecrawl": {
      "type": "http",
      "url": "http://localhost:3100/servers/firecrawl/mcp"
    },
    "zep": {
      "type": "http",
      "url": "http://localhost:3100/servers/zep/mcp"
    },
    "perplexity": {
      "type": "http",
      "url": "http://localhost:3100/servers/perplexity/mcp"
    },
    "clipboard": {
      "type": "stdio",
      "command": "clipboard-mcp"
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "claude-code",
        "--project-from-cwd"
      ]
    }
  }
}
