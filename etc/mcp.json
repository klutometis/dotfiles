{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "envmcp",
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "CONTEXT7_API_KEY": "$CONTEXT7_API_KEY"
      }
    },
    "firecrawl-mcp": {
      "command": "npx",
      "args": [
        "envmcp",
        "npx",
        "-y",
        "firecrawl-mcp"
      ],
      "env": {
        "FIRECRAWL_API_KEY": "$FIRECRAWL_API_KEY"
      }
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git"]
    },
    "linkup": {
      "command": "npx",
      "args": [
        "envmcp",
        "uvx",
        "mcp-search-linkup"
      ],
      "env": {
        "LINKUP_API_KEY": "$LINKUP_API_KEY"
      }
    },
    "openmemory": {
      "command": "npx",
      "args": [
        "envmcp",
        "npx",
        "-y",
        "openmemory"
      ],
      "env": {
        "OPENMEMORY_API_KEY": "$OPENMEMORY_API_KEY",
        "CLIENT_NAME": "openmemory"
      }
    },
    "perplexity": {
      "command": "npx",
      "args": [
        "envmcp",
        "npx",
        "-y",
        "perplexity-mcp"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "$PERPLEXITY_API_KEY"
      }
    }
  }
}
