# Generic q launcher (dmenu selection)
super + shift + q
    ~/bin/q

# Direct elvi (mnemonically aligned)
super + c
    sr calendar

super + g
    ~/bin/q --engine=google

super + m
    ~/bin/q --engine=moma

super + s
    ~/bin/q --engine=codesearch

super + h
    ~/bin/q --engine=github --type=code

super + b
    ~/bin/q --engine=buganizer

# Bookmarks
super + a
    sr chatgpt

super + e
    sr gemini

super + l
    sr gmail

super + t
    sr chat

super + y
    sr memegen

# Show all sxhkd bindings in rofi
super + question
    sxhkd-menu
