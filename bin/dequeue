#!/usr/bin/env bash

queue="${1:?'Must specify a queue'}"

head -n 1 "${queue}"

if [[ -s "${queue}" ]]; then
    # Using ed instead of sed because of difficulties using sed
    # in-place on S3; and, since ed operates on the file directly, it
    # plays nicely with links.
    ed -s "${queue}" <<EOF
1d
w
q
EOF
else
    exit 1
fi
