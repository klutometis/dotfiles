#!/usr/bin/env bash
xset s blank
xset s 600
xset dpms 1200 1800 2400
xsetroot -solid black
setxkbmap dvorak
[ -f ~/.xprofile ] && . ~/.xprofile
[ -e ~/.Xmodmap ] && xmodmap ~/.Xmodmap
xscreensaver -nosplash &
# Use this to activate xscreensaver with e.g.? We should also have a
# stumpwm command.
xautolock -corners ++++ -locker "xscreensaver-command -lock" &
redshift-mountain-view &
